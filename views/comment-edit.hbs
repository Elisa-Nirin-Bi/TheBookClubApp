<div class='container'>
  <div class='row justify-content-center'>
    <h2 class='my-5 text-light'>Edit your comment</h2>
  </div>

  <div class='row justify-content-center'>
    <div class='col-md-6'>
      <div class='card content bg-light text-dark text-center'>
        <h4><i class='bi bi-chat-dots-fill'></i></h4>
        <div
          class='card-body d-flex flex-column align-items-center justify-content-center'
        >

          <form method='POST'>
            <textarea
              id='comment-input-edit'
              type='text'
              name='message'
              autofocus='on'
              class='form-control border-primary'
              placeholder='Write something even
              smarter...'
            ></textarea>
            <button class='btn btn-lg btn-primary mt-5'>Edit comment</button>
          </form>
        </div>
      </div>
    </div>
  </div>

</div>