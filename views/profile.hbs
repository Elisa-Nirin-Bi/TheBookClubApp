<div class='container'>
  <div class='card text-dark bg-light'>
    <div class='p-3 mt-5'>
      {{#if user.profilePhoto}}
          <img
          src='{{user.profilePhoto}}'
          class='bg-light img-thumbnail m-1'
          alt='profile-picture'
          style='max-height: 200px'/>
        />
      {{else}}
          <img src='./../images/no-user-profile-pic.png'
          class='bg-light img-thumbnail m-1'
          alt= 'library'
          style='max-height: 200px'/>
      {{/if}}
    </div>
  
    <div>
      <h1>My profile</h1>
        <div>
          <ul>
            <li><h3><strong>Username</strong>: {{user.name}} </h3> </li>
            <li><h4><strong>Email</strong>: {{user.email}}</h3></li>
          </ul>
        </div>
        <div>
            <h3><strong>About Me</strong></h3>
            <p>
              {{user.bio}}
            </p>
        </div>
    </div>
  </div>

  <div class='card text-dark bg-info'>

    <h1>My book lists</h1>

    <form method='GET'>

      {{#each lists}}
        <ul>
          <a href='/booklist/{{this._id}}'>{{listName}}</a>
        </ul>
      {{/each}}

    </form>

    <a href='/edit-profile'>Edit Profile</a>
  </div>

  <div>
    <h1>My friends</h1>
  </div>

</div>