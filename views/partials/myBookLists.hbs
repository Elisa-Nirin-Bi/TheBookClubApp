<div class='col-md-4'>
  <div class='card content bg-light text-dark text-center'>
    <h4 class=''><i class='bi bi-book'></i>
      My Book Lists</h4>
    <div class='card-body d-flex flex-column align-content-between'>
      <div class=''>
        {{#if lists}}
          <ul class='pl-0'>
            {{#each lists}}
              <li class='mb-2'>
                <div
                  class='d-flex flex-row align-items-center justify-content-between'
                >
                  <a
                    href='/booklist/{{this._id}}'
                    class='btn btn-primary flex-grow-1'
                  >{{listName}}</a>
                  <form
                    method='POST'
                    action='/booklist/{{this._id}}/delete'
                    class='mb-0 ml-2'
                  >
                    <button
                      class='btn btn-outline-danger ml-2'
                      type='submit'
                    >x</button>
                  </form>
                </div>
              </li>
            {{/each}}
          </ul>
        {{else}}
          <p><em>You don't have any lists yet.</em></p>
        {{/if}}
      </div>

      {{#if profile}}
        <a
          href='/create-list'
          class='btn btn-lg btn-outline-primary mt-auto'
        >Organize lists</a>
      {{/if}}
    </div>
  </div>
</div>