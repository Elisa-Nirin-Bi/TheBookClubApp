<h1>{{user.name}}'s Book List</h1>
<br />
<div class='added-books'>
  {{#each books}}
    <h5>{{title}}</h5>
    <h6>{{subtitle}}</h6>
    <br />
    <img src={{image}} style='width: 150px;' alt='{{title}}' />

    <p>
      <style>
        .checked { color: orange; }
      </style>
      <span class='fa fa-star'></span>
      <span class='fa fa-star'></span>
      <span class='fa fa-star'></span>
      <span class='fa fa-star'></span>
      <span class='fa fa-star'></span>
      <br />
      <i>
        <h7>{{review}}</h7>
      </i>
    </p>
    <a class='btn' href='/booklist/{{this._id}}/edit'>Add Review</a>
    <form method='POST' action='/booklist/{{this._id}}/delete'>
      <button type='submit'>Delete Book</button>
    </form>
  {{/each}}

</div>

<script>
  let star = document.getElementsByTagName('span'); for (let i = 0; i <
  star.length; i++) { star[i].addEventListener('click', function (e) {
  console.log('love'); e.target.classList.add("checked") }) }

</script>