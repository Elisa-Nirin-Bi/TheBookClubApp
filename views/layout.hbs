              <a class='nav-link {{#if searchUser}} active {{/if}}' href='/search-user'>Search User</a>
              <form action='/authentication/sign-out' method='POST'>
                <button class='btn-secondary'>Sign Out</button>
              </form>
            {{else}}
              <a class='nav-link {{#if signIn}} active {{/if}}' href='/authentication/sign-in'>Sign In</a>
              <a class='nav-link {{#if signUp}} active {{/if}}' href='/authentication/sign-up'>Sign Up</a>
            {{/if}}
