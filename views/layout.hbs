          <img
          src='{{user.profilePhoto}}'
          class='bg-light img-thumbnail m-1'
          width="24"
          height="22"
          alt='profile-picture'
          />
        
      {{else}}
          <img src='./../images/no-user-profile-pic.png'
          class='bg-light mx-1'
          width="24"
          height="22"
          alt= 'default-profile-picture-alien'
          />
      {{/if}}
