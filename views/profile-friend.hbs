<div class='container'>
  {{!-- <div class='row row-flex'>
    <h1>{{searchedUser.name}}'s Profile</h1>
  </div> --}}
  <div class='row row-flex'>

    <!--- user -->

    <div class='col-md-6'>

      <div class='card content bg-light text-dark text-center'>
        <h4 class=''><i class='bi bi-person-circle'></i>
          {{searchedUser.name}}</h4>
        <div class='card-body'>
          {{#if searchedUser.profilePhoto}}
            <img
              src='{{searchedUser.profilePhoto}}'
              class='bg-light img-thumbnail m-1'
              alt='profile-picture'
              style='max-height: 100px'
            />

          {{else}}
            <img
              src='./../images/no-user-profile-pic.png'
              class='bg-light img-thumbnail m-1'
              alt='library'
              style='max-height: 100px'
            />
          {{/if}}
        </div>

        <span><strong>Name</strong>: {{searchedUser.name}}</span>
        <span><strong>Email</strong>: {{searchedUser.email}}</span>
        <br />

        {{#if friend}}
          <form method='POST'>
            <button class='btn btn-outline-primary mb-2'>Add as Friend</button>
          </form>

        {{else}}
          {{! to finish implementing delete friend option }}
          <form
            method='POST'
            action='/userprofilepage/{{searchedUser.id}}/remove'
          >
            <button class='btn btn-outline-danger mb-3'>Remove Friend</button>
          </form>

        {{/if}}

        <h3>About Me</h3>
        {{#if searchedUser.bio}}
        <p>
          {{searchedUser.bio}}
        </p>
        {{else}}
        <p><em>{{searchedUser.name}} is very shy and didn't write any bio yet.</em></p>
        {{/if}}
      </div>
    </div>

    <!----->

    <div class='col-md-6'>
      <div class='card content bg-light text-dark text-center'>
        <h4 class=''><i class='bi bi-book'></i>
          {{searchedUser.name}}'s book list</h4>
        <div class='card-body d-flex align-items-center justify-content-center'>
        {{#if lists}}
          <form method='GET'>

            {{#each lists}}
              <ul>
                <a href='/booklist/{{this._id}}'>{{listName}}</a>
              </ul>
            {{/each}}

          </form>
        {{else}}
          <p><em>{{searchedUser.name}} doesn't have any lists yet.</em></p>
        {{/if}}
        </div>
      </div>
    </div>
  </div>
</div>