<h1>{{searchedUser.name}}'s Profile</h1>

{{#if searchedUser.profilePhoto}}
  <figure>
    <img
      src='{{searchedUser.profilePhoto}}'
      width='90'
      height='120px'
      alt='profPic'
    />
  </figure>
{{/if}}

<span><strong>Name</strong>: {{searchedUser.name}}</span>
<span><strong>Email</strong>: {{searchedUser.email}}</span>
<br />

{{#if friend}}
  <form method='POST'>
    <button>Add as Friend</button>
  </form>

{{else}}

  <form method='POST' action='/userprofilepage/{{searchedUser.id}}/remove'>
    <button type='submit'>Remove Friend</button>
  </form>

{{/if}}

<br />
<br />
<br />
<br />
<br />
<br />
<br />
<h3>About Me</h3>
<br />
<p>
  {{searchedUser.bio}}
</p>

<form method='GET'>

  {{#each lists}}
    <ul>
      <a href='/booklist/{{this._id}}'>{{listName}}</a>
    </ul>
  {{/each}}

</form>