<div class="container">
  <div class="row justify-content-center">
    <h2 class='my-5 text-light'>Organize your books with custom lists</h2>
  </div>
  <div class='row row-flex'>


<!--- Create a new list -->  

    <div class="col-md-8">
      <div class='card content bg-light text-dark text-center'>
        <h4><i class="bi bi-list-ul"></i>
              Create a new list</h4>
        <div class='card-body d-flex flex-column align-items-center justify-content-center'>
          <nav class='navbar'>
            <div class='container-fluid'>
              <div class='d-flex flex-column align-items-center'>
                <h5 class='my-2' style="font-weight: 500">Enter list name: </h5>
                <form class='d-flex flex-column justify-content-start' method='POST'>
                  <input
                    id='input-list-name'
                    type='text'
                    rows = '2'
                    name='listName'
                    class='form-control mb-3'
                    autofocus='on'
                    placeholder='e.g. Favorite books'
                  />

                <button class='btn btn-lg btn-primary mt-5'>Create</button>
              </div>
              </form>
            </div>
          </nav>

        </div>
      </div>
    </div>
    
    {{> myBookLists}}
  
  </div>



</div>